@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <input id="btnRollDice" type="button" value="Roll Dice" />
</div>
<table>
    <tr id="result">

    </tr>
    <tr id="keep">

    </tr>
</table>
<div >
</div>

<script>
    $(function () {
        $("#btnRollDice")
            .click(function () {
                $.get('@Url.Action("RollDice", new { diceCount = 5 })', function (data) {
                    $('#result').empty();
                    $('#keep').empty();
                    $.each(data, function (i, die) {
                        
                        $("#result")
                            .append($('<td>')
                                .append($('<h1>')
                                    .addClass('fa')
                                    .addClass(GetIconClass(die.Result))));
                        $("#keep")
                            .append($('<td>')
                                .css('text-align', 'center')
                                .append($('<input>')
                                    .attr('type', 'checkbox')
                                    .attr('name', 'dice' + (i + 1))
                                    .attr('id', 'dice' + (i + 1))));
                },'json');
            });
        });
    });

    function GetIconClass(result) {
        var iconClass = 'fa-dice-';
        switch (result) {
            case 1:
                return iconClass + 'one';
            case 2:
                return iconClass + 'two';
            case 3:
                return iconClass + 'three';
            case 4:
                return iconClass + 'four';
            case 5:
                return iconClass + 'five';
            case 6:
                return iconClass + 'six';
        }
    }
</script>
